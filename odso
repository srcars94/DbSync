using NUnit.Framework;
using Quoting.UI.Shared.Extensions;

[TestFixture]
public class UnitConversion_PowerFactor_Tests
{
    private const decimal PF = 0.95m;

    [Test]
    public void ConvertKwToKva_DividesByPowerFactor()
    {
        const decimal kw = 100m;
        var expected = kw / PF;

        var actual = kw.ConvertKwToKva();

        Assert.That(actual, Is.EqualTo(expected).Within(0.0001m));
    }

    [Test]
    public void ConvertKvaToKw_MultipliesByPowerFactor()
    {
        const decimal kva = 100m;
        var expected = kva * PF;

        var actual = kva.ConvertKvaToKw();

        Assert.That(actual, Is.EqualTo(expected).Within(0.0001m));
    }
}